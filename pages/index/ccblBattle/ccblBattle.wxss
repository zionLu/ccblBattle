page{
    overflow-y: scroll;
}
.wrapper{
    width: 100%;
    height: 100%;
    position: relative;
}
.battleBox{
    width: 100%;
    position: absolute;
    top: 0;
}
.loadTips{
    margin-top: 20rpx;
    font-size: 28rpx;
    height: 68rpx;
    line-height: 68rpx;
    color: #909090;
    text-align: center;
    margin-bottom: 114rpx;
}
 .navigator{
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 100rpx;
    background: white;
    display: flex;
}
.select{
    width: 375rpx;
    /* display: flex; */
    /* align-items: center; */
}
.selectIcon{
    display: block;
    margin: 0 auto;
    margin-top: 12rpx;
    width: 47rpx;
    height: 47rpx;
} 
.selectText{
    height: 20rpx;
    line-height: 20rpx;
    margin-top: 14rpx;
    text-align: center;
    font-size: 20rpx;
    color: #282828;
}
.newBattleButton{
    width: 50px;
    height: 50px;
    background: #cecece;
    border-radius: 100%;
    line-height: 50px;
    position: fixed;
    bottom: 130rpx;
    right: 70rpx;
}
.battle{
    /* width:710rpx; */
    width: 650rpx;
    background: white;
    padding: 0 30rpx 0 30rpx;
    margin: 0 auto;
    margin-top: 31rpx;
    border-radius: 10rpx;
    position: relative;
}
.avatar{
    width: 70rpx;
    height: 70rpx;
    border-radius: 35rpx;
    background: #afafaf;
    position: absolute;
    right: 30rpx;
    top: 31rpx;

}
.avatarImg{
    width: 100%;
    height: 100%;
    border-radius: 35rpx;
}
.school{
    font-size: 32rpx;
    color: #4556a0;
    height: 32rpx;
    line-height: 32rpx;
    padding-top: 31rpx;
}
.class{
    font-size: 32rpx;
    color: #4556a0;
    height: 32rpx;
    line-height: 32rpx;
    margin-top: 23rpx;
}
.detail{
    margin-left: 28rpx;
    margin-top: 24rpx;
}
.detailUp,.detailDown{
    height: 26rpx;
    line-height: 26rpx;
}
.detailDown{
    margin-top: 17rpx;
}
.detailCell{
    display: inline-block;
    width: 200rpx;
    height: 26rpx;
    line-height: 26rpx;
    font-size: 26rpx;
    color:#909090;
}
.address{
    margin-top: 31rpx;
    display: flex;
}
.addressTitle{
    display: inline-block;
    font-size: 32rpx;
    height: 32rpx;
    line-height: 48rpx;
    color: #4556a0;
    vertical-align: top
}
.addressContent{
    display: inline-block;
    /* font-size: 32rpx; */
    width: 470rpx;
    vertical-align: top;
}

.addressText{
    font-size: 32rpx;
    color: #282828;
    line-height: 32rpx;
}
.addressLocation{
    line-height: 48rpx;
}
.addressDetail{
    margin-top: 22rpx;
}
.time{
    height: 32rpx;
    line-height: 32rpx;
    margin-top: 23rpx;
}
.timeTitle{
    display: inline-block;
    font-size: 32rpx;
    height: 32rpx;
    line-height: 32rpx;
    color: #4556a0;
}
.timeText{
    display: inline-block;
    font-size: 32rpx;
    color: #282828;
    height: 32rpx;
    line-height: 32rpx;
}
.time::after{
    content: ' ';
    display: block;
    width: 650rpx;
    height: 1rpx;
    background: #cccccc;
    margin-top: 20rpx;
}
.button{
    margin-top: 41rpx;
    display: inline-block;
    font-size: 28rpx;
    text-align: center;
    width: 176rpx;
    height: 56rpx;
    line-height: 56rpx;
    margin-bottom: 30rpx;
}
.mapButton{
    color: #4556a0;
    border: 2rpx solid #4556a0;
    border-radius: 20rpx;
}
.submitButton{
    color: white;
    border:  2rpx solid #4556a0;
    background: #4556a0;
    border-radius: 20rpx;
    float: right;
}