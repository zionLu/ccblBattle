/* pages/index/normalBattle/normalBattleManage/normalChoose/normalChoose.wxss */
.wrapper{
    width: 100%;
    position: relative;
    
}

.announcingBattle{
    /* width:710rpx; */
    width: 650rpx;
    background: white;
    padding: 0 30rpx 0 30rpx;
    margin: 0 auto;
    margin-top: 31rpx;
    border-radius: 10rpx;
    position: relative;
}
.enemyQuantity{
    width: 34rpx;
    height: 34rpx;
    border-radius: 17rpx;
    line-height: 34rpx;
    text-align: center;
    font-size: 20rpx;
    color: white;
    background: #ef5555;
    position: absolute;
    top: 30rpx;
    right: 30rpx;
}
.info{
    padding-top: 30rpx;
    display: flex;
    align-items: center;
}
.avatar{
    width: 70rpx;
    height: 70rpx;
    border-radius: 35rpx;
    background: #afafaf;
}
.avatarImg{
    width: 100%;
    height: 100%;
    border-radius: 35rpx;
}
.infoText{
    margin-left: 32rpx;
}
.wechatName{
    font-size: 32rpx;
    height: 32rpx;
    line-height: 32rpx;
    color: #4556a0;
}
.detail{
    margin-top: 13rpx;
    height: 26rpx;
    line-height: 26rpx;
}
.detailCell{
    display: inline-block;
    width: 160rpx;
    height: 26rpx;
    line-height: 26rpx;
    font-size: 26rpx;
    color:#909090;
}
.times{
    width: 210rpx;
}
.address{
    margin-top: 31rpx;
    display: flex;
}
.addressTitle{
    display: inline-block;
    font-size: 32rpx;
    height: 32rpx;
    line-height: 48rpx;
    color: #4556a0;
    vertical-align: top
}
.addressContent{
    display: inline-block;
    /* font-size: 32rpx; */
    width: 470rpx;
    vertical-align: top;
}
.addressText{
    font-size: 32rpx;
    color: #282828;
    line-height: 32rpx;
}
.addressLocation{
    line-height: 48rpx;
}
.addressDetail{
    margin-top: 22rpx;
}
.time{
    height: 32rpx;
    line-height: 32rpx;
    margin-top: 23rpx;
}
.timeTitle{
    display: inline-block;
    font-size: 32rpx;
    height: 32rpx;
    line-height: 32rpx;
    color: #4556a0;
}
.timeText{
    display: inline-block;
    font-size: 32rpx;
    color: #282828;
    height: 32rpx;
    line-height: 32rpx;
}
.time::after{
    content: ' ';
    display: block;
    width: 650rpx;
    height: 1rpx;
    background: #cccccc;
    margin-top: 20rpx;
}
.button{
    margin-top: 41rpx;
    display: inline-block;
    font-size: 28rpx;
    text-align: center;
    width: 176rpx;
    height: 56rpx;
    line-height: 56rpx;
    margin-bottom: 30rpx;
}
.mapButton{
    color: #4556a0;
    border: 2rpx solid #4556a0;
    border-radius: 20rpx;
}
.submitButton{
    color: white;
    border:  2rpx solid #4556a0;
    background: #4556a0;
    border-radius: 20rpx;
    float: right;
}

.enemyBox{
    width:650rpx;
    padding-left: 30rpx;
    padding-right: 30rpx;
    margin: 0 auto;
    background: white ;
    margin-top: 20rpx;
    border-radius: 10rpx;
}

.enemyBoxTitle{
    font-size: 28rpx;
    color: #4556a0;
    height: 66rpx;
    line-height: 66rpx;
    border-bottom: 1rpx solid #cccccc;
}

.enemy{
    display: flex;
    margin-top: 20rpx;
}
.enemyAvatar{
    margin-left: 10rpx;
    width: 50rpx;
    height: 50rpx;
    background: #afafaf;
}
.enemyAvatarImg{
    width: 50rpx;
    height:  50rpx;
}
.enemyInfo{
    margin-left: 20rpx;
    width: 420rpx;
}
.enemyName{
    font-size: 28rpx;
    height: 28rpx;
    line-height: 28rpx;
    color: #282828;
}
.enemyDetail{
    line-height: 36rpx;
    margin-top: 13rpx;
}

.enemyDetailCell{
    display: inline-block;
    font-size: 22rpx;
    width: 125rpx;
    height: 36rpx;
    line-height: 36rpx;
    color: #909090;
    vertical-align: top;
}
.enemyTimes{
    width: 200rpx
}
.acceptButton{
    width: 136rpx;
    height: 41rpx;
    line-height: 41rpx;
    text-align: center;
    font-size: 26rpx;
    color: #4556a0;
    border: 2rpx solid #4556a0;
    border-radius: 15rpx;
}